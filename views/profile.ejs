          <div class="mt-5">
            <h2>Add a listing</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Listing Title</label>
                  <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
              <label for="country" class="form-label">Are you selling, buying, or trading?</label>
              <select class="form-select" aria-label="Default select example" id="country" name="country">
                <option selected>Select type of exchange</option>
                <option value="B ">Buying</option>
                <option value="S ">Selling</option>
                <option value="T ">Trading</option>


              </select>
              </div>
              <div class="mb-3">
                <label for="basic-url" class="form-label">Condition</label>
                <select class="form-select" aria-label="Default select example" id="dish" name="dish">
                  <option selected>Please Select</option>
                  <option value="New">New</option>
                  <option value="Used-Like New">Used-Like New</option>
                  <option value="Used-fair">Used-fair</option>
                  <option value="Used-poor">Used-poor</option>
                  <option value="Parts">Parts</option>
                </select>
                </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Item Price</label>
                <textarea class="form-control" id="caption" name="caption" placeholder="List Price of Item"></textarea>
              </div>
              <div class="mb-3">
                <label for="ingredients" class="form-label">Description</label>
                <textarea class="form-control" id="ingredients" name="ingredients" placeholder="Description of Product" rows="5"></textarea>
              </div>
              <div class="mb-3">
                <label for="directions" class="form-label">Features</label>
                <textarea class="form-control" id="directions" name="directions" placeholder="Add in Features of Item" rows="5"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Product Images</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
